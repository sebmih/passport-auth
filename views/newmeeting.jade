extends layout

block content
	div.container
		div.row
			div.col-sm-6.col-md-4.col-md-offset-4
				h1.text-center.login-title Create a new excruciating meeting
				p.text-center.alert-danger Participant email will actually receive the invitation
					div.signup-wall
						form(class='form-signin', action='/meetings/create', method='POST')
							input(type='text', name='name', class='form-control', placeholder='Name',required)
							input(type='text', name='objective', class='form-control', placeholder='Objective')
							input(type='date', min="#{minDate}" name='startTime', class='form-control', placeholder='Start Time', required)
							input(type='date', name='endTime', min="#{minDate}",class='form-control', placeholder='End Time')
							input(type='email', name='participant', class='form-control', placeholder='Participant Email')
							button(class='btn btn-lg btn-primary btn-block', type='submit') Done!
							span.clearfix
					#message
						if message
							h1.text-center.error-message #{message}

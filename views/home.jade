extends layout

block content
	div.container
		div.row
			div.col-sm-6.col-md-4.col-md-offset-4
				#user
					h1.text-center.login-title Hello there #{user.firstName}. Here are your incredible details:
						div.signup-wall
							ul.user-details
								li Email: #{user.email}
								li First Name: #{user.firstName} 
								li Last Name: #{user.lastName}
						a(href='/meetings/new', class='text-center new-account') Create a Meeting
						p ---
						a(href='/meetings', class='text-center new-account') View All Meetings
						p ---		
						a(href='/signout', class='text-center new-account') Slowly Walk Away

extends layout

block content
	div.container
		div.row
			div.col-sm-6.col-md-4.col-md-offset-4
				#user
					h1.text-center.login-title A very interesting Meeting:
						div.signup-wall
							ul.user-details
								li Name: #{meeting.name}
								li Objective: #{meeting.objective} 
								li Start Date: #{meeting.startTime}
								li End Date: #{meeting.endTime}
								li Participant: #{meeting.participant}
						a(href='/meetings/new', class='text-center new-account') Create a Meeting
						p ---		
						a(href='/meetings', class='text-center new-account') View All Meetings
						p ---	
						a(href='/signout', class='text-center new-account') Slowly Walk Away
